---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"article">;

const { class: className, ...rest } = Astro.props;
---

<article
  id="article"
  aria-labelledby="heading"
  class:list={[
    "prose prose-slate max-w-none dark:prose-invert",
    "prose-headings:font-accent prose-headings:font-black",
    "prose-headings:text-balance",
    "prose-headings:text-indigo-600 dark:prose-headings:text-pink-500",
    "prose-h1:text-slate-900 dark:prose-h1:text-slate-200",
    "[&_.linked]:font-black [&_.linked]:text-inherit [&_.linked]:no-underline",
    className,
  ]}
  {...rest}
>
  <slot />
</article>
