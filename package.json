{
  "name": "webapp",
  "type": "module",
  "version": "0.2.0",
  "description": "My personal portfolio website built with Astro, Tailwind CSS, MDX and the Github API",
  "private": true,
  "repository": "git@github.com:princemuel/webapp.git",
  "author": "princemuel <vansomecsam@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start:dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier ./src --write \"**/*.{js,mjs,jsx,ts,tsx,md,mdx,astro,html,css}\" --ignore-unknown --cache",
    "format:check": "prettier ./src --check \"**/*.{js,mjs,jsx,ts,tsx,md,mdx,astro,html,css}\" --ignore-unknown --cache",
    "lint:write": "eslint \"./src/**/*.{js,mjs,jsx,ts,tsx,astro}\" --fix --report-unused-disable-directives --cache --cache-strategy content",
    "lint": "npm run typecheck && npm run lint:write && npm run format:write",
    "get:env": "npx vercel link && npx vercel env pull",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@astrojs/check": "^0.4.1",
    "@astrojs/mdx": "^2.1.0",
    "@astrojs/react": "^3.0.9",
    "@astrojs/rss": "^4.0.3",
    "@astrojs/sitemap": "^3.0.5",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/vercel": "^7.0.1",
    "@conform-to/react": "^0.9.1",
    "@conform-to/zod": "^0.9.1",
    "@expressive-code/plugin-collapsible-sections": "^0.32.2",
    "@headlessui/react": "^1.7.18",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@vercel/og": "^0.6.2",
    "astro": "^4.2.4",
    "astro-expressive-code": "^0.32.2",
    "astro-font": "^0.0.77",
    "astro-icon": "^1.0.2",
    "framer-motion": "^11.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "resend": "^3.1.0",
    "tailwind-variants": "^0.2.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@tailwindcss/typography": "^0.5.10",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vite-pwa/astro": "^0.2.0",
    "astro-eslint-parser": "^0.16.2",
    "css-has-pseudo": "^6.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.3",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.0.5",
    "lint-staged": "^15.2.0",
    "mdast-util-to-string": "^4.0.0",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.2.4",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "reading-time": "^1.5.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^7.1.0",
    "remark-toc": "^9.0.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "unist-util-visit": "^5.0.0"
  },
  "lint-staged": {
    "*.ts": "eslint --ext .ts --fix",
    "*.tsx": "eslint --ext .tsx --fix",
    "*.cts": "eslint --ext .cts --fix",
    "*.mts": "eslint --ext .mts --fix",
    "*.js": "eslint --ext .js --fix",
    "*.jsx": "eslint --ext .jsx --fix",
    "*.cjs": "eslint --ext .cjs --fix",
    "*.mjs": "eslint --ext .mjs --fix",
    "*.astro": [
      "astro check",
      "eslint --ext .astro --fix"
    ],
    "*.md": "astro check"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
