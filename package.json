{
  "name": "princemuel.com",
  "type": "module",
  "version": "0.3.0",
  "description": "My personal portfolio website built with Astro, Tailwind CSS, MDX and the Github API",
  "private": true,
  "repository": "git@github.com:princemuel/webapp.git",
  "author": "princemuel <vansomecsam@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "clean": "rimraf ./.astro ./dist ./vercel",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier ./src --write \"**/*.{js,mjs,jsx,ts,tsx,md,mdx,astro,html,css}\" --ignore-unknown --cache",
    "format:check": "prettier ./src --check \"**/*.{js,mjs,jsx,ts,tsx,md,mdx,astro,html,css}\" --ignore-unknown --cache",
    "format:lint": "oxlint -D correctness -D perf -A debugger -A eqeqeq --import-plugin --jsx-a11y-plugin --fix -c ./.eslintrc.json",
    "lint": "npm run typecheck && npm run format:lint && npm run format:write",
    "get:env": "npx vercel link && npx vercel env pull",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@alpinejs/intersect": "^3.13.8",
    "@alpinejs/persist": "^3.13.8",
    "@astrojs/alpinejs": "^0.4.0",
    "@astrojs/check": "^0.5.10",
    "@astrojs/db": "^0.10.1",
    "@astrojs/mdx": "^2.2.4",
    "@astrojs/rss": "^4.0.5",
    "@astrojs/sitemap": "^3.1.2",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/vercel": "^7.5.2",
    "@expressive-code/plugin-collapsible-sections": "^0.35.3",
    "@qwikdev/astro": "^0.5.14",
    "@qwikest/icons": "^0.0.13",
    "@t3-oss/env-core": "^0.9.2",
    "@vercel/og": "^0.6.2",
    "alpinejs": "^3.13.8",
    "astro": "^4.5.16",
    "astro-expressive-code": "^0.33.5",
    "astro-font": "^0.0.79",
    "astro-icon": "^1.1.0",
    "octokit": "^3.2.0",
    "resend": "^3.2.0",
    "sharp": "^0.33.3",
    "simple-stack-form": "^0.1.12",
    "tailwind-variants": "^0.2.1",
    "typescript": "^5.4.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@iconify-json/lucide": "^1.1.179",
    "@tailwindcss/typography": "^0.5.12",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/alpinejs": "^3.13.10",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "astro-eslint-parser": "^0.17.0",
    "css-has-pseudo": "^6.0.3",
    "eslint": "^9.0.0",
    "eslint-plugin-astro": "^0.33.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-oxlint": "^0.2.7",
    "eslint-plugin-qwik": "^1.5.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mdast-util-to-string": "^4.0.0",
    "oxlint": "^0.2.15",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^9.5.4",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "reading-time": "^1.5.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^7.1.0",
    "remark-toc": "^9.0.0",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "unist-util-visit": "^5.0.0"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint",
    "**/*.{md,astro}": [
      "astro check"
    ]
  }
}
