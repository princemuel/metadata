{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": { "enabled": false },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true },
    "ignore": ["node_modules", "dist", ".vercel", ".vscode", ".astro"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "ignore": ["node_modules", "dist", ".vercel", ".vscode", ".astro"]
  },
  "overrides": [
    {
      "include": ["*.svelte", "*.astro", "*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    }
  ]
}
