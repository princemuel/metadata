<script>
  import { getElement } from "@/shared/helpers/dom";

  class XHeart extends HTMLElement {
    constructor() {
      super();

      let count = 0;

      const heartButton = getElement("button", HTMLButtonElement, this);
      const countSpan = getElement("[data-id='count']", HTMLSpanElement, this);

      heartButton.addEventListener("click", () => {
        count++;
        countSpan.textContent = count.toString();
      });
    }
  }

  customElements.define("x-heart", XHeart);
</script>
